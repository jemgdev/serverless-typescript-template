{
  "name": "serverless-typescript-template",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsc && tsc-alias && serverless offline --stage dev --region us-east-1",
    "build": "tsc",
    "lint": "ts-standard",
    "lint:fix": "ts-standard --fix",
    "test": "jest test --coverage",
    "deploy": "serverless deploy --stage dev --region us-east-1 --verbose"
  },
  "keywords": [],
  "author": "jemgdev",
  "license": "MIT",
  "description": "A serverless typescript template",
  "dependencies": {
    "loggerfy": "1.1.4",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.152",
    "@types/jest": "30.0.0",
    "@types/node": "24.3.0",
    "eslint": "9.33.0",
    "jest": "30.0.5",
    "serverless-offline": "14.4.0",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "ts-standard": "12.0.2",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist",
      "node_modules"
    ],
    "rules": {
      "@typescript-eslint/strict-boolean-expressions": "off"
    }
  }
}
