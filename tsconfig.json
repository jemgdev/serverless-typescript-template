{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "module": "CommonJS",
    "declaration": true,
    "strict": false,
    "target": "ES5",
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@domain": ["domain/*"],
      "@infrastructure": ["infrastructure/*"],
      "@usecases": ["usecases/*"],
      "@utils": ["utils/*"],
      "@*": ["*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test"]
}
