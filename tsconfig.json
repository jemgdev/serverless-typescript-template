{
  "compilerOptions": {
    "isolatedModules": true,
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "target": "ES2022",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      // user
      "@user/*": ["user/*"],
      "@user/domain/*": ["user/domain/*"],
      "@user/value-objects/*": ["user/domain/value-objects/*"],
      "@user/application/*": ["user/application/*"],
      "@user/usecases/*": ["user/application/usecases/*"],
      "@user/ports/*": ["user/application/ports/*"],
      "@user/infrastructure/*": ["user/infrastructure/*"],
      "@user/driven/*": ["user/infrastructure/driven/*"],
      "@user/driving/*": ["user/infrastructure/driving/*"],

      // shared
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*.test.ts"]
}
