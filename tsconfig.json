{
  "compilerOptions": {
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "target": "ES2022",
    "sourceMap": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@user/domain/*": ["user/domain/*"],
      "@user/application/*": ["user/application/*"],
      "@user/infrastructure/*": ["user/infrastructure/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
